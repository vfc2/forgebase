{
    "name": "forgebase-backend",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.pylint",
                "ms-python.mypy-type-checker",
                "njpwerner.autodocstring"
            ],
            "settings": {
                "python.defaultInterpreterPath": "./.venv/bin/python",
                "python.terminal.activateEnvironment": true
            }
        }
    },
    "forwardPorts": [
        8000
    ],
    "portsAttributes": {
        "8000": {
            "label": "Forgebase Backend API",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && python -m pip install --upgrade pip && python -m pip install -r requirements.txt -r requirements-dev.txt",
    "workspaceFolder": "/workspaces/forgebase/backend"
}