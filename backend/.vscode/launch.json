{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI Chat",
            "type": "debugpy",
            "request": "launch",
            "module": "forgebase.interfaces.cli",
            "args": [
                "chat",
                "--debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "Debug CLI Chat (No Debug Logging)",
            "type": "debugpy",
            "request": "launch",
            "module": "forgebase.interfaces.cli",
            "args": [
                "chat"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "tests/"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": true
        },
    ]
}